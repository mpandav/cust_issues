{
  "name": "postgresql-connector",
  "title": "PostgreSQL Connector",
  "author": "TIBCO Software Inc.",
  "type": "flogo:connector",
  "version": "2.5.1",
  "display": {
    "description": "Connector to connect to a PostgreSQL database server",
    "category": "PostgreSQL",
    "visible": true,
    "smallIcon": "icons/ic-postgres-connection@2x.png",
    "largeIcon": "icons/ic-postgres-connection@3x.png",
    "connectionsupport": true
  },
  "ref": "github.com/tibco/wi-postgres/src/app/PostgreSQL/connector/connection",
  "keyfield": "name",
  "settings": [{
      "name":"databaseType",
      "type":"string",
      "required":true,
      "value": "PostgreSQL",
      "allowed":["PostgreSQL",
        "Redshift",
      "Greenplum"],
      "display":{
        "name": "Database Type",
        "visible": true,
        "description": "Type of database you want to connect"
      }
  },
    {
      "name": "name",
      "type": "string",
      "required": true,
      "display": {
        "name": "Connection Name",
        "visible": true
      }
    },
    {
      "name": "description",
      "type": "string",
      "display": {
        "name": "Description",
        "visible": true
      }
    },
    {
      "name": "host",
      "type": "string",
      "required": true,
      "display": {
        "name": "Host",
        "description": "Database Host",
        "type": "string",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "port",
      "type": "integer",
      "required": true,
      "value": 5432,
      "display": {
        "name": "Port",
        "description": "Database Port",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "databaseName",
      "type": "string",
      "required": true,
      "display": {
        "name": "Database Name",
        "description": "Database Name",
        "type": "string",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "user",
      "type": "string",
      "required": true,
      "display": {
        "name": "User",
        "description": "Database User",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "password",
      "type": "string",
      "required": true,
      "display": {
        "name": "Password",
        "description": "Database Password",
        "type": "password",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "maxopenconnection",
      "type": "integer",
      "required": false,
      "value": 0,
      "display": {
        "name": "Maximum Open Connections",
        "description": "Number of total open connections to the database. Default is 0 which means there is no maximum limit",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "maxidleconnection",
      "type": "integer",
      "required": false,
      "value": 2,
      "display": {
        "name": "Maximum Idle Connections",
        "description": "Number of idle connections in the connection pool. Default is 2. If value <= 0 means no idle connections are retained",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "connmaxlifetime",
      "type": "string",
      "required": false,
      "value": 0,
      "display": {
        "name": "Maximum Connection Lifetime",
        "description": "Maximum amount of time a connection may be reused. Valid time units are ns, us (or Âµs), ms, s, m, h. Example: 60s, 60m or 6h45m. Default value is 0 which means connection will be used forever",
        "type": "string",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "maxconnectattempts",
      "type": "integer",
      "required": false,
      "value": 3,
      "display": {
        "name": "Maximum Connection Retry Attempts",
        "description": "Maximum number of attempts to reconnect with a database server",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "connectionretrydelay",
      "type": "integer",
      "required": false,
      "value": 5,
      "display": {
        "name": "Connection Retry Delay",
        "description": "Number of seconds to wait between connection retry attempts",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "connectiontimeout",
      "type": "integer",
      "required": false,
      "value": 20,
      "display": {
        "name": "Connection Timeout",
        "description": "Timeout (in sec) for establishing connection. Set it to 0 for no timeout",
        "type": "integer",
        "visible": "true",
        "appPropertySupport": true
      }
    },
    {
      "name": "onprem",
      "type": "boolean",
      "required": true,
      "value": false,
      "display": {
        "name": "On-Premise Database",
        "description": "Flag to indicate whether database is running on-premise",
        "visible": false
      }
    },
    {
			"name": "tlsconfig",
			"type": "boolean",
			"required": true,
			"value":false,
			"display": {
			  "name": "Secure Connection",
			  "description": "Enable to use secure connection",
        "visible": true,
        "type": "boolean"
			}
    },
    {
      "name": "tlsparam",
      "type": "string",
      "display": {
        "name": "TLS",
        "description": "Choose the type of authentication to use",
        "type": "dropdown",
        "selection": "single",
        "visible": true
      },
      "allowed": [
        "VerifyCA", "VerifyFull"
      ],
      "value": "VerifyCA"
    },
    {
      "name": "cacert",
      "type": "string",
      "required": false,
      "display": {
        "name": "CA Certificate",
        "description": "Select the CA certificate file used to sign the server's certificate",
        "visible": false,
        "type": "fileselector",
        "fileExtensions": [".pem", ".crt"],
        "appPropertySupport": true
      }
    },
    {
      "name": "clientcert",
      "type": "string",
      "required": false,
      "display": {
        "name": "Client Certificate",
        "description": "Select the client certificate file for connections requiring client auth",
        "visible": false,
        "type": "fileselector",
        "fileExtensions": [".pem"],
        "appPropertySupport": true
      }
    },
    {
      "name": "clientkey",
      "type": "string",
      "required": false,
      "display": {
        "name": "Client Key",
        "description": "Select the client key file used for connections requiring client auth",
        "visible": false,
        "type": "fileselector",
        "fileExtensions": [".pem"],
        "appPropertySupport": true
      }
    }
  ],
  "actions": [{
    "name": "Connect"
  }]
}
