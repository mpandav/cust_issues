{
  "name": "mysql-connector",
  "title": "MySQL Connector",
  "author": "TIBCO Software Inc.",
  "type": "flogo:connector",
  "version": "2.4.6",
  "display": {
    "name": "MySQL Connection",
    "description": "MySQL Connector",
    "category": "MySQL",
    "visible": true,
    "smallIcon": "icons/my_sql.png",
    "largeIcon": "icons/my_sql.png",
    "connectionsupport": true
  },
  "ref": "github.com/tibco/wi-mysql/src/app/MySQL/connector/connection",
  "keyfield": "name",
  "settings": [{
      "name": "name",
      "type": "string",
      "required": true,
      "display": {
        "name": "Name",
        "visible": true
      }
    },
    {
      "name": "description",
      "type": "string",
      "display": {
        "name": "Description",
        "visible": true
      }
    },
    {
      "name": "host",
      "type": "string",
      "required": true,
      "display": {
        "name": "Host",
        "description": "MySQL Database Host",
        "type": "string",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "port",
      "type": "integer",
      "required": true,
      "value": 3306,
      "display": {
        "name": "Port",
        "description": "MySQL Database Port",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "databaseName",
      "type": "string",
      "required": true,
      "display": {
        "name": "Database Name",
        "description": "MySQL Database Name",
        "type": "string",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "user",
      "type": "string",
      "required": true,
      "display": {
        "name": "User",
        "description": "MySQL Database User",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "password",
      "type": "string",
      "required": true,
      "display": {
        "name": "Password",
        "description": "MySQL Database Password",
        "type": "password",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "maxopenconnection",
      "type": "integer",
      "required": false,
      "value": 0,
      "display": {
        "name": "Maximum Open Connections",
        "description": "Number of total open connections to the database. Default is 0 which means there is no maximum limit",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "maxidleconnection",
      "type": "integer",
      "required": false,
      "value": 2,
      "display": {
        "name": "Maximum Idle Connections",
        "description": "Number of idle connections in the connection pool. Default is 2. If value <= 0 means no idle connections are retained",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "connmaxlifetime",
      "type": "string",
      "required": false,
      "value": 0,
      "display": {
        "name": "Maximum Connection Lifetime",
        "description": "Maximum amount of time a connection may be reused. Valid time units are ns, us (or Âµs), ms, s, m, h. Example: 60s, 60m or 6h45m. Default value is 0 which means connection will be used forever",
        "type": "string",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "maxconnectattempts",
      "type": "integer",
      "required": false,
      "value": 3,
      "display": {
        "name": "Maximum Connection Retry Attempts",
        "description": "Maximum number of attempts to reconnect with a database server",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "connectionretrydelay",
      "type": "integer",
      "required": false,
      "value": 5,
      "display": {
        "name": "Connection Retry Delay",
        "description": "Number of seconds to wait between connection retry attempts",
        "type": "integer",
        "visible": true,
        "appPropertySupport": true
      }
    },
    {
      "name": "connectiontimeout",
      "type": "integer",
      "required": false,
      "value": 20,
      "display": {
        "name": "Connection Timeout",
        "description": "Timeout (in sec) for establishing connection. Set it to 0 for no timeout",
        "type": "integer",
        "visible": "true",
        "appPropertySupport": true
      }
    },
    {
      "name": "onprem",
      "type": "boolean",
      "required": true,
      "value":false,
      "display": {
        "name": "On-Premise Database",
        "description": "Flag to indicate whether database is running on-premise",
        "visible": false
      }
    },
    {
			"name": "tlsconfig",
			"type": "boolean",
			"required": true,
			"value":false,
			"display": {
			  "name": "Secure Connection",
			  "description": "Enable to use secure connection",
        "visible": true,
        "type": "boolean"
			}
    },
    {
      "name": "tlsparam",
      "type": "string",
      "display": {
        "name": "TLS",
        "description": "Choose the type of authentication to use",
        "type": "dropdown",
        "selection": "single",
        "visible": true
      },
      "allowed": [
        "Required", "Preferred", "VerifyCA", "VerifyIdentity"
      ],
      "value": "Required"
    },
    {
      "name": "cacert",
      "type": "string",
      "required": false,
      "display": {
        "name": "CA Certificate",
        "description": "Select the CA certificate file used to sign the server's certificate",
        "visible": false,
        "type": "fileselector",
        "fileExtensions": [".pem",".cer"],
        "appPropertySupport": true
      }
    },
    {
      "name": "clientcert",
      "type": "string",
      "required": false,
      "display": {
        "name": "Client Certificate",
        "description": "Select the client certificate file for connections requiring client auth",
        "visible": false,
        "type": "fileselector",
        "fileExtensions": [".pem",".cer"],
        "appPropertySupport": true
      }
    },
    {
      "name": "clientkey",
      "type": "string",
      "required": false,
      "display": {
        "name": "Client Key",
        "description": "Select the client key file used for connections requiring client auth",
        "visible": false,
        "type": "fileselector",
        "fileExtensions": [".pem",".cer"],
        "appPropertySupport": true
      }
    },
    {
			"name": "validatecert",
			"type": "boolean",
			"required": true,
			"value": false,
			"display": {
			  "name": "Validate Server Certificate",
			  "description": "Server certificate will be verified when set to true.",
        "visible": true,
        "type": "boolean"
			}
    }
  ],
  "actions": [{
    "name": "Connect"
  }]
}
